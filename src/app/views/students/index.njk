{% extends "layout.njk" %}

{% block head %}
    <title>Professores</title>
{% endblock %}

{% block content %}

    <div class="card table-container">
        <table  width='100%'>
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {%for teacher in teachers%}
                    <td>
                        <span style='background: url({{teacher.avatar_url}})'></span>
                        {{teacher.name}}
                    </td>
                    <td>
                        {{teacher.acompanhamento}}
                    </td>
                    <td><a href="/teachers/{{teacher.id}}">Ver</a> </td>
                </tr>
                     {%endfor%}
               
            </tbody>
        </table>
    </div>
{% endblock %}